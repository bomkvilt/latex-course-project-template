{
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.bibtex-format.tab": "4 spaces",
    "latex-workshop.intellisense.citation.maxfilesizeMB": 50,
    "latex-workshop.latex.build.clearLog.everyRecipeStep.enabled": false,
    "latex-workshop.latex.outDir": "%DIR%/build/TeX",
    "latex-workshop.latex.tools": [
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-recorder",
                "-file-line-error",
                "-aux-directory=%OUTDIR%",
                "-output-directory=%OUTDIR%",
                "%DOC%",
            ],
            "env": {}
        },
        {
            "name": "pythontex",
            "command": "pythontex",
            "args": [
                "%OUTDIR%/%DOCFILE%.tex"
            ],
            "env": {}
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "-include-directory=%OUTDIR%",
                "%OUTDIR%/%DOCFILE%.aux"
            ],
            "env": {}
        },
        {
            "name": "equations",
            "command": "python",
            "args": [ "-B",
                "control.py",
                "type2tex",
                "sections/:all:"
            ],
            "env": {}
        },
        {
            "name": "sections",
            "command": "python",
            "args": [ "-B",
                "control.py",
                "generator",
                "section",
                "sections/:all:"
            ],
            "env": {}
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "pdflatex ➞ bibtex ➞ pdflatex × 2",
            "tools": [
                "sections",
                // "equations",
                "pdflatex",
                // "bibtex",
                "pdflatex",
            ]
        },
    ],
    "latex-workshop.latex.bibDirs": [
        "%OUTDIR%"
    ],
    "latex-workshop.intellisense.file.base": "both",
}